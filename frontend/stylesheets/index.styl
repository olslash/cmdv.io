@require constants

sidebar-width = 225px
footer-height = 2em
sidebar-padding = 15px

html, body, #app
  height: 100%

body
  margin: 0

  font-size: 12px
  color: white
  font-family: 'Source Code Pro', monospace

code
  font-family: 'Source Code Pro', monospace

*, *:before, *:after
  -moz-box-sizing: border-box
  -webkit-box-sizing: border-box
  box-sizing: border-box

.explain
  position: fixed
  z-index: 100
  padding: .5em
  top: 30px
  left: 5px

  border-radius: 2px
  opacity: .9
  color: dark-grey
  background: highlight-blue

  &:after, &:before
    bottom: 100%
    /*left: 50%*/
    border: solid transparent
    content: " "
    height: 0
    width: 0
    position: absolute
    pointer-events: none

  &:before
    border-color: rgba(255, 225, 255, 0)
    border-bottom-color: highlight-blue
    border-width: 10px

#main-container
  height: 100%

#sidebar
  height: 30%

  color: text-dark-grey
  background-color: dark-grey
  border-right: 1px solid border-color

  .buttons-container
    margin-left: sidebar-padding
    margin-top: sidebar-padding

    .raw-link
      float: right
      margin-right: 2em

      color: text-light-grey


  img
    &.icon
      cursor: pointer
      width: 20px
      height: 20px

    &.disabled
      cursor: not-allowed
      opacity: .2

.sidebar-item
  h1
    margin-bottom: 8px
    padding-left: sidebar-padding

    font-size: 1.2em
    font-weight: bold
    color: text-med-grey

    &.hidden
      visibility: hidden

  ol.revisions
    /*list-style-type: none*/
    padding: 0
    margin: 0

    li
      padding: 5px 0 5px sidebar-padding

    .active
      background-color: highlight-grey
      color: white

    .unsaved
      color: highlight-yellow

    img // loading or failed icons
      height: 10px
      width: 10px
      vertical-align: bottom
      display: inline
      margin-left: .25em

      &.hidden
        visibility: hidden

#paste-content, #line-numbers
  height: 70%
  // 2 left- and bottom- clears line numbers and footer
  // 0 right-, text box has own padding to prevent scroll bar being pushed in
  padding-top: 1em
  padding-bottom: 0px
  padding-left: 2em

  background-color: med-grey
  pre
    background-color: med-grey !important // prevent syntax highlighter from changing the background color
  .contentArea // paste area when showing static text
    width: 100%
    height: 100%
    padding-bottom: 2em
    margin-top: 0px
    overflow: auto // fix bottom padding
    white-space: pre // display newlines properly

  textarea // paste area when in editing mode
    resize: none
    height: 100%
    width: 100%
    padding: 0 1em 0 0

    color: white
    background-color: transparent // required instead of inherit for ie10
    border: 0
    font-family: inherit
    font-size: 1em

    &:focus
      outline: none

#line-numbers
  position: absolute
  z-index: 100
  padding-left: 10px
  height: 70%
  overflow: auto

/*margin-left: 0px*/

#sidebar, #paste-content
  overflow: auto
  -ms-overflow-style: -ms-autohiding-scrollbar

#footer
  position: fixed
  display: table // to vertical align content
  bottom: 0
  left: 0
  width: 100%

  height: footer-height

  background-color: light-grey
  border-top: 1px solid border-color

  .footer-content
    padding: 0 20px 0 20px
    display: table-cell
    vertical-align: middle

    .left
      width: 50%
      text-align: left
      float: left

      .about
        text-decoration: none
        color: text-dark-grey

    .right
      width: 50%
      text-align: right
      float: left
      color: text-med-grey

      .lang-select
        margin-right: 1em
        font-size: 1em

        background: light-grey
        color: text-light-grey
        border: 1px solid border-color

        &[disabled]
          color: text-dark-grey
          border: 0
          /*background: light-grey*/

    /*.detected*/
      /*font-size: .8em*/

      /*color: text-dark-grey*/

@media screen and (min-width: 47.5em )
  #sidebar, #paste-content
    height: 100%

  .sidebar-item
    margin-bottom: 200px

  #paste-content
    margin-left: sidebar-width
    padding-bottom: footer-height

  #sidebar
    position: absolute
    top: 0
    left: 0
    width: sidebar-width

  #line-numbers
    left: sidebar-width
